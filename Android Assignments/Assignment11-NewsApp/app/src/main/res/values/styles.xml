<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="grid_style">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:foreground">@drawable/content_foreground</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="content_text_style">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
    </style>

    <style name="read_more_style">
        <item name="android:textColor">@color/md_theme_onPrimaryFixedVariant</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>