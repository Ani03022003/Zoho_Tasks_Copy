<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/displayFragment">

    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.displaycolors.display.DisplayFragment"
        android:label="fragment_display"
        tools:layout="@layout/fragment_display" >
        <action
            android:id="@+id/action_displayFragment_to_recycleViewFragment"
            app:destination="@id/recycleViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/recycleViewFragment"
        android:name="com.example.displaycolors.rvdisplay.RecycleViewFragment"
        android:label="RecycleViewFragment" >
        <action
            android:id="@+id/action_recycleViewFragment_to_displayFragment"
            app:destination="@id/displayFragment" />
        <argument
            android:name="colors"
            app:argType="string[]" />
    </fragment>
</navigation>